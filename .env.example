# Google OAuth Configuration
# Get this from Google Cloud Console > Credentials > OAuth 2.0 Client ID
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Facebook OAuth Configuration (optional)
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# Backend Google OAuth (for server-side verification)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Email Configuration (optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Database Configuration (optional)
MONGODB_URI=mongodb://localhost:27017/catch_music

# JWT Secrets (generate random strings)
JWT_SECRET=your_random_jwt_secret_here
JWT_REFRESH_SECRET=your_random_refresh_secret_here

# Frontend URL (for production)
FRONTEND_URL=http://localhost:8080
